<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/txtThree_txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="算法和数据结构就是编程的一个重要部分，你若失掉了算法和数据结构，你就把一切都失掉了。"
        android:singleLine="true"       
        android:ellipsize="start"
        android:layout_margin="10dp"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txtThree_txt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="算法和数据结构就是编程的一个重要部分，你若失掉了算法和数据结构，你就把一切都失掉了。"
        android:singleLine="true"
        android:ellipsize="middle"        
        android:layout_margin="10dp"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txtThree_txt3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="算法和数据结构就是编程的一个重要部分，你若失掉了算法和数据结构，你就把一切都失掉了。"        
        android:singleLine="true"
        android:ellipsize="end" 
        android:layout_margin="10dp"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txtThree_txt4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="算法和数据结构就是编程的一个重要部分，你若失掉了算法和数据结构，你就把一切都失掉了。"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:focusable="true"         
        android:layout_margin="10dp"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txtThree_txt5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:singleLine="false"
        android:maxLines="8"
        android:scrollbars="vertical"
        android:text="@string/big_text"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbarFadeDuration="2000"                              
        android:textSize="20sp" />

</LinearLayout>
