<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.my_app_carmanage"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:configChanges="orientation|keyboardHidden"
            android:name="com.example.my_app_carmanage.LogoActivity"
            android:label="冷链物流管理系统"
            android:screenOrientation="sensor" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity 
            android:icon="@drawable/ic_launcher"
            android:name=".LandingActivity"
            android:label="登陆"
            >
        </activity>
        <activity 
            android:icon="@drawable/ic_launcher"
            android:name=".RegisterActivity"
            android:label="注册"
            >
        </activity>
        <activity 
            android:icon="@drawable/ic_launcher"
            android:name="user.FunctionActivity"
            android:label="功能"
            >
        </activity>
        <activity 
            android:icon="@drawable/ic_launcher"
            android:name="user.MonitoringActivity"
            android:label="监控"
            >
        </activity>
        
        <activity 
            android:icon="@drawable/ic_launcher"
            android:name="user.LocationActivity"
            android:label="定位"
            >
        </activity>
        <activity 
            android:icon="@drawable/ic_launcher"
            android:name="user.CurveActivity"
            android:label="折线显示"
            >
        </activity>
        <activity 
            android:icon="@drawable/ic_launcher"
            android:name="user.ListActivity"
            android:label="列表显示"
            >
        </activity>
        <activity 
            android:icon="@drawable/ic_launcher"
            android:name="user.DiscrepancyActivity"
            android:label="超额温度"
            >
        </activity>
        <activity 
            android:icon="@drawable/ic_launcher"
            android:name="user.ChooseActivity"
            android:label="查询车辆"
            >
        </activity>
        <activity 
            android:icon="@drawable/ic_launcher"
            android:name="user.ChooseCarActivity"
            android:label="选择车辆"
            >
        </activity>
        <activity 
            android:icon="@drawable/ic_launcher"
            android:name="user.ContactActivity"
            android:label="联系车主"
            >
        </activity>
        <activity 
            android:icon="@drawable/ic_launcher"
            android:name="user.AlarmActivity"
            android:label="设置警报"
            >
        </activity>
        <activity 
            android:icon="@drawable/ic_launcher"
            android:name="user.AffirmActivity"
            android:label="确认收货"
            >
        </activity>
        <activity 
            android:icon="@drawable/ic_launcher"
            android:name="user.WeatherActivity"
            android:label="天气预报"
            >
        </activity>
        <activity 
            android:icon="@drawable/ic_launcher"
            android:name="admin.AdminActivity"
            android:label="管理员功能界面"
            >
        </activity>
        <activity 
            android:icon="@drawable/ic_launcher"
            android:name="admin.AdminCarActivity"
            android:label="车辆管理界面"
            >
        </activity>
        <activity 
            android:icon="@drawable/ic_launcher"
            android:name="admin.InsertCarActivity"
            android:label="车辆添加界面"
            >
        </activity>
        <activity 
            android:icon="@drawable/ic_launcher"
            android:name="admin.RelieveActivity"
            android:label="解除绑定"
            >
        </activity>
        <activity 
            android:icon="@drawable/ic_launcher"
            android:name="admin.AdminAlarmActivity"
            android:label="管理员预设警报值"
            >
        </activity>
		
    </application>

    <uses-permission android:name= "android.permission.CALL_PHONE"></uses-permission>
    <!-- 使用网络功能所需权限 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" >
    </uses-permission>
    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" >
    </uses-permission>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" >
    </uses-permission>
	<uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>
	
    <!-- 读取手机的当前状态权限，没有的话会报错，这个是使用百度地图API必须的 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" >
    </uses-permission>

    <!--Cache功能需要读写外部存储器 ，若没这个权限，地图加载不出来-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" >
    </uses-permission>
    
    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true" />
    
</manifest>
